generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  accouts    Account[]
  categories Category[]
  metas      Meta[]
}

model Account {
  id     String @id @default(uuid())
  name   String
  userId String

  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@unique([name, userId])
}

model Transaction {
  id          String   @id @default(uuid())
  value       Float
  description String
  date        DateTime
  categoryId  Int
  accountId   String

  account  Account  @relation(fields: [accountId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  @@map("tbl_transactions")
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String
  type   Type
  userId String?

  user User? @relation(fields: [userId], references: [email])

  transactions Transaction[]
  meta         Meta[]

  @@unique([name, type, userId])
}

model Meta {
  id         String @id @default(uuid())
  value      Float
  month      Int
  year       Int
  userId     String
  categoryId Int

  user     User     @relation(fields: [userId], references: [email])
  category Category @relation(fields: [categoryId], references: [id])

  @@unique([month, year, userId, categoryId])
}

enum Type {
  Ganhos
  Gastos
}
